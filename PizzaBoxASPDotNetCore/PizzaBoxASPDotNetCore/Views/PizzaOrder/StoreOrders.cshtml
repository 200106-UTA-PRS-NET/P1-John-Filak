@model IEnumerable<PizzaBoxWeb.Models.PizzaOrderViewModel>

@{
    ViewData["Title"] = "StoreOrders";
    TempData.Keep("Login"); 

}

<h4 class="text-center">@TempData["Login"].ToString()</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Username
            </th>
            <th>
               Total Order Price
            </th>
            <th>
                Order Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Orderid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a class="btn btn-primary btn-lg" asp-controller="Store" asp-action="BackToHome" role="button"> Back to Menu</a>
</div>