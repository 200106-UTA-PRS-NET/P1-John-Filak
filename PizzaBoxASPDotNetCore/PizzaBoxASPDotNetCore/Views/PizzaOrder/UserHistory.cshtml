@model IEnumerable<PizzaBoxWeb.Models.PizzaOrderViewModel>

@{
    ViewData["Title"] = "UserHistory";
    TempData.Keep("Login"); 

}

<h1>@TempData["Login"].ToString() :  Your Past Orders </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orderid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Storename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Orderid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Storename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="LoggedIn" role="button"> Back to Menu</a>
</div>